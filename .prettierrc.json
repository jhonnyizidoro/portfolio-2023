{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "trailingComma": "all",
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "endOfLine": "auto",
  "importOrder": [
    "react|next",
    "^@/svg",
    "^@/styles/reset\\.scss$",
    "^@/styles/global\\.scss$",
    "\\.scss|/images|/translations",
    "^@/components"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
